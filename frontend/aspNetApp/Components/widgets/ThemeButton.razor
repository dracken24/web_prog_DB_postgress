@rendermode InteractiveServer
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<button class="btn btn-primary" @onclick="ToggleTheme">Toggle Theme</button>

@code {
    private async Task ToggleTheme()
    {
        // Console.WriteLine("Theme button clicked");
        var theme = await JSRuntime.InvokeAsync<string>("getTheme");
        var newTheme = theme == "dark" ? "light" : "dark";
        await JSRuntime.InvokeVoidAsync("setTheme", newTheme);
    }
}